{
  "name": "@pro-vision/eslint-config-pv",
  "version": "3.2.0",
  "description": "pro!vision ESLint configuration. Can be adapted and adjusted in each project.",
  "author": {
    "name": "pro!vision GmbH",
    "url": "http://www.pro-vision.de"
  },
  "contributors": [
    {
      "name": "Mehran Behzad",
      "email": "mbehzad@pro-vision.de"
    },
    {
      "name": "Ingo Fahrentholz",
      "email": "ifahrentholz@pro-vision.de"
    },
    {
      "name": "David Ding",
      "email": "dding@pro-vision.de"
    }
  ],
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "preferGlobal": false,
  "homepage": "https://github.com/pro-vision/eslint-config-pv",
  "bugs": {
    "url": "https://github.com/pro-vision/eslint-config-pv/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pro-vision/eslint-config-pv.git"
  },
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "watch": "jest --watch"
  },
  "main": "es6.js",
  "keywords": [
    "eslint",
    "eslintconfig",
    "pro!vision"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "8.44.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "6.1.0",
    "@typescript-eslint/parser": "6.1.0",
    "eslint": "8.45.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "27.3.1",
    "prettier": "2.8.8",
    "typescript": "5.1.6"
  }
}
